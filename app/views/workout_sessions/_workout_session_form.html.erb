<%= simple_form_for [workout_plan, workout_session], method: :post, url: workout_plan_workout_sessions_path(workout_plan) do |f| %>
  <%= f.input :session_name, label: "Write the focus of the session" %>
  <%= f.input :date_time, as: :datetime, label: "Choose the date and time for the session" %>
  <%= f.input :duration, label: "How long is the session (minutes)?",input_html: { class: "form-control", placeholder: "30" }%>
  <%= f.input :with_trainer, as: :radio_buttons, collection: [[ 'Yes', true ], [ 'No', false ]], label: "With a trainer?" %>
  <%= f.hidden_field :workout_plan_id, value: workout_plan.id %>
  <%= f.submit "Add a session" %>
<% end %>
