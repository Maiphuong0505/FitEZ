<div class="container mt-3 mb-5">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <%= link_to "← Back", client_path(@workout_session.workout_plan.client), class: "link-button btn btn-outline-secondary rounded-pill" %>
      <h3 class="my-2 badge rounded-pill px-3 py-2 me-2 bg-info text-dark fw-normal fs-6"><i class="fa-solid fa-clock"></i> <%= @workout_session.date_time.strftime("%a %b %e at %l:%M %p") %></h3>
    </div>
    <div class="row">
      <div class="col-12 col-md-12 col-lg-9 margin-bottom-responsive">
        <h2 class="my-0"><%= @workout_session.workout_plan.client.first_name %>'s <%= @workout_session.session_name.split(" ")[0] %> training</h2>
      </div>
      <div class="col-12 col-md-12 col-lg-3 flex-responsive mt-2 mb-4">
        <button type="button"
        class="link-button badge rounded-pill px-3 py-2 bg-danger text-light fw-normal fs-6"
        data-bs-toggle="modal"
        data-bs-target="#formModal">
          Add Session Exercise
        </button>
      </div>
    </div>
  </div>
  <div class="row justify-content-between g-1">
    <!-- Exercises Box -->
    <div class="border-round-responsive-start card p-3 border-0 col-12 col-md-7 bg-white" id="session_exercises">
      <% if @session_exercises.blank? %>
        <h3><i class="fa-solid fa-star"></i> Workout magic starts here! </h3>
      <% else %>
        <div>
          <% @session_exercises.each do |session_exercise| %>
            <%= render "workout_sessions/exercise_display", session_exercise: session_exercise %>
          <% end %>
        </div>
      <% end %>
    </div>
    <!-- Comments section -->
    <div class="col-12 col-md-5 margin-top-responsive">
      <div class="container chat mt-0 border-round-responsive-end">
        <h3 class="mt-2"><i class="fa-solid fa-file-pen pe-2" style="color: #b15965;"></i>Leave a note</h3>
        <div id="comment-section" class="comments">
          <% @workout_session.comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
          <% end %>
        </div>
        <div class="comment-form">
          <%= render "comments/comment_form", workout_session: @workout_session, comment: @comment, user: current_user %>
        </div>
      </div>
    </div>
  </div>
  <!-- AI section -->
  <div class="container chatbot rounded-5 ai-margin-top">
    <h3 class="mt-2"><i class="fa-solid fa-comments pe-2" style="color: #b15965;"></i>Chat with Fitty</h3>
    <div id="questions">
      <% @workout_session.questions.each do |question| %>
        <%= render "questions/question", question: question %>
      <% end %>
    </div>
    <div class="question-form">
      <%= render "questions/question_form", workout_session: @workout_session, question: @question%>
    </div>
  </div>
</div>
<!-- Add Exercise Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="addExerciseModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <%# <h5 class="modal-title" id="addExerciseModalLabel">Add Session Exercise</h5> %>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-2 pb-5">
        <%= render 'workout_sessions/new_exercise', workout_session: @workout_session, session_exercise: @session_exercise %>
      </div>
    </div>
  </div>
</div>
