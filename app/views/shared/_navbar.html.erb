<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("fitez-logo.png", size: "100x30", alt: "FitEZ logo") %>
    <% end %>
    <% unless user_signed_in? %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    <% else %>
      <button class="navbar-toggler avatar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <% if current_user.photo.key.nil? %>
          <%= image_tag("icons/apple-icon-180x180.png", class: "avatar", alt: "dropdown menu") %>
        <% else %>
          <%= cl_image_tag(current_user.photo.key, class: "avatar", alt: "dropdown menu") %>
        <% end %>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if current_user.trainer? %>
            <li class="nav-item active">
              <%= link_to "Clients", clients_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Exercise Library", exercises_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},  class: "nav-link" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
