<div class="navbar navbar-dark">
  <div class="mobile-nav">
    <% unless user_signed_in? %>
      <div class="nav-icon">
        <%= link_to new_user_session_path, class: "nav-button", style: "border: none; background-color: $danger; display: inline-block;" do %>
          <i class="fa-solid fa-circle-user" style="color: #ffffff; font-size: 24px"></i>
        <% end %>
      </div>
      <div class="nav-icon">
        <%= link_to root_path, class: "nav-button", style: "border: none; background-color: $danger; display: inline-block;" do %>
          <i class="fa-solid fa-house" style="color: #ffffff; font-size: 24px"></i>
        <% end %>
      </div>
    <% else %>
      <div class="nav-icon">
        <%= link_to root_path, class: "nav-button", style: "border: none; background-color: $danger; display: inline-block;" do %>
          <i class="fa-solid fa-house" style="color: #ffffff; font-size: 24px"></i>
        <% end %>
      </div>
      <% if current_user.trainer? %>
