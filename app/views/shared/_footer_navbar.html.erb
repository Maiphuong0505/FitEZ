        <div class="nav-icon">
          <%= link_to client_path(current_user), class: "nav-button", style: "border: none; background-color: $danger; display: inline-block;" do %>
            <i class="fa-solid fa-id-card-clip" style="color: #ffffff; font-size: 24px"></i>
          <% end %>
