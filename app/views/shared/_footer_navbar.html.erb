        <% end %>
      </div>
      <div class="nav-icon">
        <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-button", style: "border: none; background-color: $danger; display: inline-block;" do %>
          <i class="fa-solid fa-right-from-bracket" style="color: #ffffff; font-size: 24px"></i>
        <% end %>
      </div>
    <% end %>
  </div>
