<%= turbo_frame_tag :new_plan_form do %>
  <div class="container py-4">
    <div class="row justify-content-end">
      <div class="col-lg-10 col-md-10 col-sm-12">
        <div class="card border-0 rounded-5 shadow-sm">
          <div class="card-header bg-danger light-gray border-0 rounded-top-5 py-4">
            <h3 class="text-center text-light mt-0 mb-2 fw-bold">Plan <%= client.first_name %>'s Next Workout Journey</h3>
            <p class="text-center text-light mb-0">Set your clientâ€™s path to success!</p>
          </div>
          <div class="card-body p-5">
            <%= simple_form_for [client, workout_plan], data: { controller: "client-side-forms", action: "turbo:submit-end->client-side-forms#reset" }, method: :post, url: client_workout_plans_path(client) do |f| %>
              <div class="row g-4 justify-content-center align-items-center">
                <div class="col-12 my-0">
                  <%= f.input :starting_date,
                    as: :string,
                    label: "Select a date range",
                    input_html: { data: {controller: "datepicker-workout-plan"}, class: "rounded-3" } %>
                </div>
                <div class="col-12 my-0">
                  <%= f.label :scheduled_trainer_session, "Number of trainer sessions", class: "form-label" %>
                  <div class="input-group mb-3">
                    <%= f.input :scheduled_trainer_session, label: false, input_html: { class: "form-control rounded-start-3", placeholder: "6" }, wrapper: false %>
                    <span class="input-group-text rounded-end-3">sessions</span>
                  </div>
                </div>
                <%= f.hidden_field :client_id, value: client.id %>
                <div class="col-12 text-center pt-1">
                  <%= f.submit "Add Plan",  class: "btn btn-danger px-5 rounded-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
