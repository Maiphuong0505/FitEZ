<div class="container mt-3 mb-5">
  <h1 class="text-center mb-4">My Clients</h1>
  <div class="row">
    <% @my_clients.each do |client| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <%= link_to client_path(client), class: "text-decoration-none" do %>
          <div class="card client-card">
            <div class="card-body d-flex align-items-center">
              <!-- Avatar -->
              <div class="me-3">
                <%= cl_image_tag(client.photo.key, class: "avatar-bordered") %>
              </div>
              <!-- Name and Workout Plans -->
              <div class="client-info">
                <h5 class="card-title mb-1"> <%= "#{client.first_name} #{client.last_name}" %></h5>
                <p class="card-text mb-0">
                  <%= pluralize(client.workout_plans_as_client.count, "Workout Plan") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
